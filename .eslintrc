{
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": "off",
    "function-paren-newline": "off",
    "implicit-arrow-linebreak": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/dotenv", "**/webpack-merge"]}],
    "no-console": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-unused-vars": 1,
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}